<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Create ODS schema tables: tbl_patient, tbl_chart, tbl_form
    -->

    <!-- Create ODS schema -->
    <changeSet id="20260110210000-0" author="developer">
        <sql>CREATE SCHEMA IF NOT EXISTS ods</sql>
    </changeSet>

    <!-- Create tbl_patient -->
    <changeSet id="20260110210000-1" author="developer">
        <createTable tableName="tbl_patient" schemaName="ods">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_tbl_patient"/>
            </column>
            <column name="pt_no" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="sex" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="resident_no1" type="varchar(6)">
                <constraints nullable="false"/>
            </column>
            <column name="resident_no2" type="varchar(7)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- Create tbl_chart -->
    <changeSet id="20260110210000-2" author="developer">
        <createTable tableName="tbl_chart" schemaName="ods">
            <column name="chart_no" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_tbl_chart"/>
            </column>
            <column name="pt_no" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="in_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="out_date" type="date"/>
            <column name="department" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="doctor" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- Create tbl_form -->
    <changeSet id="20260110210000-3" author="developer">
        <createTable tableName="tbl_form" schemaName="ods">
            <column name="form_no" type="varchar(50)">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_tbl_form"/>
            </column>
            <column name="parent_form_no" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="pt_no" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="chart_no" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="record_data" type="text"/>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- Add foreign key constraints -->
    <changeSet id="20260110210000-4" author="developer">
        <addForeignKeyConstraint baseColumnNames="pt_no"
                                 baseTableName="tbl_chart"
                                 baseTableSchemaName="ods"
                                 constraintName="fk_tbl_chart__pt_no"
                                 referencedColumnNames="pt_no"
                                 referencedTableName="tbl_patient"
                                 referencedTableSchemaName="ods"/>

        <addForeignKeyConstraint baseColumnNames="pt_no"
                                 baseTableName="tbl_form"
                                 baseTableSchemaName="ods"
                                 constraintName="fk_tbl_form__pt_no"
                                 referencedColumnNames="pt_no"
                                 referencedTableName="tbl_patient"
                                 referencedTableSchemaName="ods"/>

        <addForeignKeyConstraint baseColumnNames="chart_no"
                                 baseTableName="tbl_form"
                                 baseTableSchemaName="ods"
                                 constraintName="fk_tbl_form__chart_no"
                                 referencedColumnNames="chart_no"
                                 referencedTableName="tbl_chart"
                                 referencedTableSchemaName="ods"/>
    </changeSet>

    <!-- Load sample data for tbl_patient -->
    <changeSet id="20260110210000-5-data" author="developer" context="faker">
        <loadData
                  file="config/liquibase/fake-data/patient.csv"
                  separator=";"
                  tableName="tbl_patient"
                  schemaName="ods"
                  usePreparedStatements="true">
            <column name="id" type="numeric"/>
            <column name="pt_no" type="string"/>
            <column name="name" type="string"/>
            <column name="sex" type="string"/>
            <column name="age" type="numeric"/>
            <column name="resident_no1" type="string"/>
            <column name="resident_no2" type="string"/>
        </loadData>
    </changeSet>

    <!-- Load sample data for tbl_chart -->
    <changeSet id="20260110210000-6-data" author="developer" context="faker">
        <loadData
                  file="config/liquibase/fake-data/chart.csv"
                  separator=";"
                  tableName="tbl_chart"
                  schemaName="ods"
                  usePreparedStatements="true">
            <column name="chart_no" type="numeric"/>
            <column name="pt_no" type="string"/>
            <column name="type" type="string"/>
            <column name="code" type="string"/>
            <column name="in_date" type="date"/>
            <column name="out_date" type="date"/>
            <column name="department" type="string"/>
            <column name="doctor" type="string"/>
        </loadData>
    </changeSet>

    <!-- Load sample data for tbl_form -->
    <changeSet id="20260110210000-7-data" author="developer" context="faker">
        <loadData
                  file="config/liquibase/fake-data/form.csv"
                  separator=";"
                  tableName="tbl_form"
                  schemaName="ods"
                  usePreparedStatements="true">
            <column name="form_no" type="string"/>
            <column name="parent_form_no" type="string"/>
            <column name="pt_no" type="string"/>
            <column name="chart_no" type="numeric"/>
            <column name="name" type="string"/>
            <column name="type" type="string"/>
            <column name="record_data" type="string"/>
        </loadData>
    </changeSet>

    <!-- Update empty parent_form_no to NULL -->
    <changeSet id="20260110210000-7-fix" author="developer" context="faker">
        <sql>UPDATE ods.tbl_form SET parent_form_no = NULL WHERE parent_form_no = ''</sql>
    </changeSet>

    <!-- Add self-referencing foreign key constraint after data load -->
    <changeSet id="20260110210000-8" author="developer">
        <addForeignKeyConstraint baseColumnNames="parent_form_no"
                                 baseTableName="tbl_form"
                                 baseTableSchemaName="ods"
                                 constraintName="fk_tbl_form__parent_form_no"
                                 referencedColumnNames="form_no"
                                 referencedTableName="tbl_form"
                                 referencedTableSchemaName="ods"/>
    </changeSet>

</databaseChangeLog>
